<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Management System - Red Theme</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    
    <style>
        :root {
            --primary: #ef4444;
            --secondary: #f97316;
            --gradient: linear-gradient(135deg, var(--primary), var(--secondary));
        }

        body {
            background: #fef2f2;
            min-height: 100vh;
        }

        .gradient-bg {
            background: var(--gradient);
        }

        .glass-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(239, 68, 68, 0.1);
            box-shadow: 0 8px 32px rgba(239, 68, 68, 0.1);
        }

        .form-input {
            background: rgba(255, 255, 255, 0.9);
            border: 2px solid #fee2e2;
            transition: all 0.3s ease;
        }

        .form-input:focus {
            border-color: var(--primary);
            box-shadow: 0 0 0 4px rgba(239, 68, 68, 0.1);
            outline: none;
        }

        .form-select {
            background: rgba(255, 255, 255, 0.9);
            border: 2px solid #fee2e2;
            transition: all 0.3s ease;
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 20 20'%3e%3cpath stroke='%23ef4444' stroke-linecap='round' stroke-linejoin='round' stroke-width='1.5' d='M6 8l4 4 4-4'/%3e%3c/svg%3e");
            background-position: right 1rem center;
            background-repeat: no-repeat;
            background-size: 1.5em 1.5em;
            padding-right: 2.5rem;
            -webkit-appearance: none;
            -moz-appearance: none;
            appearance: none;
        }

        .form-select:focus {
            border-color: var(--primary);
            box-shadow: 0 0 0 4px rgba(239, 68, 68, 0.1);
            outline: none;
        }

        .animate-float {
            animation: float 6s ease-in-out infinite;
        }

        @keyframes float {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-20px); }
        }

        .btn-gradient {
            background: var(--gradient);
            color: white;
            transition: all 0.3s ease;
        }

        .btn-gradient:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(239, 68, 68, 0.2);
        }

        .form-label {
            font-size: 0.95rem;
        }



        .nav-item:hover {
            background: rgba(255, 255, 255, 0.2);
            transform: translateY(-2px);
        }

        .shape {
            position: absolute;
            border-radius: 50%;
            background: linear-gradient(45deg, var(--primary), var(--secondary));
            opacity: 0.1;
        }

        .shape-1 {
            width: 300px;
            height: 300px;
            top: -150px;
            left: -150px;
        }

        .shape-2 {
            width: 200px;
            height: 200px;
            bottom: -100px;
            right: -100px;
        }

        .status-badge {
            background: rgba(239, 68, 68, 0.1);
            color: var(--primary);
        }
    </style>

</head>
<body class="relative">
    <div class="absolute inset-0 overflow-hidden">
        <div class="shape shape-1 animate-float"></div>
        <div class="shape shape-2 animate-float" style="animation-delay: -3s;"></div>
    </div>

    <!-- Navigation -->
    <nav class="gradient-bg text-white sticky top-0 z-50">
        <div class="max-w-7xl mx-auto px-6 py-4">
            <div class="flex items-center justify-between">
                <div class="flex items-center space-x-4">
                    <div class="text-2xl font-bold">
                        <i class="fas fa-box mr-2"></i>
                        Product Management
                    </div>
                    <span class="status-badge">Pro</span>
                </div>

            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="max-w-4xl mx-auto px-6 py-12">
        <div class="glass-card rounded-2xl p-8">
            <div class="flex items-center justify-between mb-8">
                <div>
                    <h1 class="text-3xl font-bold bg-gradient-to-r from-primary to-secondary bg-clip-text text-gray-800">
                        Edit Product
                    </h1>
                    <p class="text-gray-600 mt-2">Update product details and inventory information</p>
                </div>
                <div class="w-16 h-16 rounded-xl gradient-bg flex items-center justify-center text-white">
                    <i class="fas fa-edit text-2xl"></i>
                </div>
            </div>
            <input type="text" id="productId" value="<%=product._id%>" hidden>
            <form class="space-y-8" id="myForm">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    <!-- Product Name Field -->
                    <div class="space-y-2">
                        <label class="form-label">
                            <i class="fas fa-tag text-red-500 mr-2"></i>
                            Product Name
                        </label>
                        <input type="text" id="item" value="<%=product.item%>" class="form-input" name="productName" placeholder="Enter product name" required>
                    </div>

                    <!-- SKU Field -->
                    <div class="space-y-2">
                        <label class="form-label">
                            <i class="fas fa-barcode text-red-500 mr-2"></i>
                            SKU
                        </label>
                        <input type="text" id="SKU" value="<%=product.SKU%>" class="form-input" name="sku" placeholder="SKU-12345" required>
                    </div>

                    <!-- Price Field -->
                    <div class="space-y-2">
                        <label class="form-label">
                            <i class="fas fa-dollar-sign text-red-500 mr-2"></i>
                            Price
                        </label>
                        <input type="number" step="0.01" id="price" value="<%=product.price%>" class="form-input" name="price" placeholder="0.00" required>
                    </div>

                    <!-- Category Field -->
                    <div class="space-y-2">
                        <label class="form-label">
                            <i class="fas fa-folder text-red-500 mr-2"></i>
                            Category
                        </label>
                        <select class="form-select" id="category" name="category" required>
                            <option value="<%=product.category%>"><%=product.category%></option>
                            <option value="electronics">üì± Electronics</option>
                            <option value="clothing">üëï Clothing</option>
                            <option value="home">üè† Home & Garden</option>
                            <option value="beauty">‚ú® Beauty & Health</option>
                            <option value="sports">üèà Sports & Outdoors</option>
                        </select>
                    </div>

                    <!-- Quantity Field -->
                    <div class="space-y-2">
                        <label class="form-label">
                            <i class="fas fa-cubes text-red-500 mr-2"></i>
                            Quantity
                        </label>
                        <input type="number" id="quantity" value="<%=product.quantity%>" class="form-input" name="quantity" placeholder="0" required>
                    </div>

                <!-- Form Actions -->
                <div class="flex items-center justify-between pt-6 border-t border-red-100">
                    <button type="button" onclick="window.location.href='/'" class="px-6 py-3 rounded-xl bg-red-50 text-red-600 hover:bg-red-100 transition-all duration-300">
                        <i class="fas fa-arrow-left mr-2"></i>
                        Back to Products
                    </button>
                    <button type="submit" class="btn-gradient px-8 py-3 rounded-xl font-medium">
                        <i class="fas fa-save mr-2"></i>
                        Update Product
                    </button>
                </div>
            </form>
        </div>
    </main>
</body>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    const form = document.getElementById('myForm');
    form.addEventListener("submit",async (event)=>{
        event.preventDefault();
        
        const formData = {
             item : document.getElementById('item').value,
             SKU : document.getElementById('SKU').value,
             quantity : document.getElementById('quantity').value,
             price : document.getElementById('price').value,
             category : document.getElementById('category').value,
        }
        const productId = document.getElementById('productId').value;
        try {
            const response = await fetch(`/editProduct/${productId}`,{
                method:'POST',
                headers:{"Content-Type": "application/json"},
                body:JSON.stringify(formData),
            });
            const result = await response.json();
            if(response.ok){
                Swal.fire(
                    'Saved!',
                    'The Product have been saved successfully',
                    'success'
                ).then(()=>{
                    location.reload();
                });
            }else{
                Swal.fire('Error',result.message||"Failed to Save Product",'error');
            }
        } catch (error) {
            console.error('Error saving Product',error);
            Swal.fire("Error",'An unexpected error occured while saving product','error');
        }
    })
</script>
